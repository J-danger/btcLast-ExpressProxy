{
  "name": "btclastandroid",
  "version": "1.0.0",
  "description": "BTC price tracker",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "npm run start --prefix client",
    "server": "node server",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
