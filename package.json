    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.2",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dropzone": "^10.2.1",
    "react-router-dom": "^5.1.2"
  }
}
